@page "/thank-you"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject NavigationManager NavigationManager

<PageTitle>Thank you</PageTitle>

<div class="card bg-light text-center">
    <div class="card-body">
        <div class="container-fluid">
            <div class="row justify-content-end">
                <div class="col">
                    <h3>Thank you for shopping with EasyBriezy!</h3>
                    <p>Your order has been successfully placed. Check your e-mail for the tracking information.</p>
                    <img src="/img/happy_cheese.png" alt="Happy cheese" class="img-thumbnail thankyou-img mb-2">
                    <div>
                        <button @onclick="GoToStore" class="btn btn-outline-primary">🧀 Back to the cheeses</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoToStore()
    {
        NavigationManager.NavigateTo("/");
    }
}